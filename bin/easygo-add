#!/usr/bin/env node

const cli = require('../lib/cli');

const args = cli.setup({
    usage: '<page-name> [element-name...]',
    options: [
        ['-f, --force', '是否覆盖'],
        ['-c, --custom', '生成定制化 easygo 测试页面']
    ],
    help: [
        '    Examples:',
        cli.chalk.gray('    # 添加一个easygo页面'),
        '        $ easygo add page.html',
    ].join('\n')
});

let fileName = args[0];

if (!fileName.match(/^[\w\.\-$]+$/)) {
    cli.warn('请输入合法文件名称!');
    return;
}

// 检查模板更新后启动命令

    require('../lib/add').exec({
        fileName: fileName,
        force: cli.program.force

    });

