#!/usr/bin/env node

require('babel-polyfill');
require('babel-register');
const cli = require('../lib/cli');
const fs = require('fs');
const path = require('path');
const shell = require("shelljs");
const vue = require("../lib/vue")
const args = cli.setup({
    noArgs: true,
    options: [
        ['-p, --port <n>', '启动端口号', parseInt],
        ['-f, --force', '强制启动，关闭占用端口的进程'],
        ['-l, --livereload <value>', '启用调试自动刷新']
    ],
    help: [
        '启动ara调试服务器',
        '    $ sudo ara server',
    ].join('\n')
});

let dev = "sudo npm run dev";
// 生成vue



let pa = path.resolve(__dirname, '../');
// cli 配置
if (cli.program.port) {
    defaultConfig.port = cli.program.port;
}



// 强制启动，关闭占用端口的进程
if (cli.program.force) {
    require('../lib/util/kill-process-byport')({
            port: defaultConfig.port
        })
        .then(() => {
            shell.exec(dev);
        }, error => {
            cli.error(error);
        });
} else {
    //[]

    vue().then(function(result) {
        shell.cd(pa)
        shell.exec(dev);
    }).catch(function(error) {
        console.log(error);
    });

}
