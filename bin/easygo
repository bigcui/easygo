#!/usr/bin/env node

const chalk = require('chalk');
require('commander')
	.version(require('../package').version)
	.usage('<command> [options]')
	.command('init', chalk.green('初始化ara项目'))
	.command('add', chalk.green('添加一个ara网页'))
	.command('addelement', chalk.green('添加一个ara组件'))
	.command('validate', chalk.green('验证ara网页'))
	.command('validateelement', chalk.green('验证ara组件'))
	.command('server', chalk.green('启动ara调试服务器'))
	.command('update', chalk.green('更新cli模块'))
	.command('custom', chalk.green('编译定制化ara'))
	.parse(process.argv)

