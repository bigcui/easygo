#!/usr/bin/env node
const cli = require('../lib/cli');
const chalk = require('chalk');
const config = require('../package.json');
console.log('')

let s = {
   logo                     :
                                '\n  ' + chalk.red('  _|_| ')  + '    ' + chalk.yellow('_|_|_| ') + chalk.green('     ') +chalk.green('  _|_|') +
                                '\n  ' + chalk.red('_|    _|') + '   ' + chalk.yellow('_|    _|') + chalk.green('    ') +chalk.green('_|    _|') +
                                '\n  ' + chalk.red('_|_|_|_|') + '   ' + chalk.yellow('_|_|_| ') +  chalk.green('     ') +chalk.green('_|_|_|_|') +
                                '\n  ' + chalk.red('_|    _|') + '   ' + chalk.yellow('_|    _|') + chalk.green('    ') +chalk.green('_|    _|') +
                                '\n  ' + chalk.red('_|    _|') + '   ' + chalk.yellow('_|    _|') + chalk.green('    ') +chalk.green('_|    _|')
}

console.log(s.logo);
// nodejs 版本必须大于等于4.0.0才能够启动程序
if (parseFloat(process.version.replace(/[^\d\.]/g, '')) < 4.0) {
    cli.error('mip-cli need nodejs version >=', cli.chalk.green('v4.0.0'));
    process.exit(1);
}

require('commander')
	.version(require('../package').version)
	.usage('<command> [options]')
	.command('init', chalk.green('初始化ara项目'))
	.command('add', chalk.green('添加一个ara网页'))
	.command('addelement', chalk.green('添加一个ara组件'))
	.command('validate', chalk.green('验证ara网页'))
	.command('validateelement', chalk.green('验证ara组件'))
	.command('server', chalk.green('(sudo)启动ara调试服务器'))
  .command('-V', chalk.green('(sudo)启动ara调试服务器'))
	.parse(process.argv)

